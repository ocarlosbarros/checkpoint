@using CheckPoint.Models;
@{

    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<section>
    <h2>Lista Comentário</h2>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Usuário</th>
                <th scope="col">Depoimento</th>
                <th scope="col">Data do Depoimento</th>
                <th scope="col">Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var comentario in ViewData["comentariosList"] as List<Comment>)
            {
                <tr>
                    <td>@comentario.ID</td>
                    <td>@comentario.User.Name</td>
                    <td>@comentario.User.Name</td>
                    <td>@comentario.TextoComentario</td>
                    <td>@comentario.DataCriacao</td>
                    @{
                        var status = @comentario.Status == false ? "Reprovado" : "Aprovado"; 
                    }
                    <td>@status</td>
                    
                </tr>
            }
        </tbody>
    </table>
</section>
