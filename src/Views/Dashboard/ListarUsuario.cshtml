@using CheckPoint.Models;
@{

    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    var quantidade = ViewBag.quantidade;
}
<section>
    <h2>Listar Usuários</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Gênero</th>
                <th scope="col">Data de nascimento</th>
                <th scope="col">Endereço</th>
                <th scope="col">Telefone</th>
                <th scope="col">Permissão</th>
                <th scope="col">Email</th>
                <th scope="col">Senha</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in ViewData["usuariosList"] as List<User>)
            {
                
                <tr>
                    <td>@usuario.Id</td>
                    <td>@usuario.Name</td>
                    <td>@usuario.Gender</td>
                    <td>@usuario.DateOfBirth</td>
                    <td>@usuario.Address</td>
                    <td>@usuario.Telephone</td>
                    <td>@usuario.Permission</td>
                    <td>@usuario.Email</td>
                    <td>@usuario.Password</td>
                </tr>
            }
            <tr>
                    <th scope="col">Total Usuarios Cadastrados</th>
                    @{
                    }
                    <th scope="row" colspan="8">@quantidade</th>
            </tr>
            </tbody>
    </table>
</section>
