<section class="full-screen">
    <form method="POST" action="Usuario/CadastrarUsuario">
        <div>
            <label for="lbl-nome">Nome:</label>
            <input type="text" name="nome" />
        </div>

        <div>
            <label for="lbl-dataNascimento">Data de nascimento:</label>
            <input type="date" name="dataNascimento" />
        </div>

        <div>
            <label for="lbl-email">E-mail:</label>
            <input type="mail" name="eMail" />
        </div>

        <div>
            <label for="lbl-endereco">Endereço:</label>
            <input type="text" name="endereco" />
        </div>

        <div>
            <label for="lbl-genero">Gênero:</label>
            <input type="text" name="genero" />
        </div>

        <div>
            <label for="lbl-telefone">Telefone:</label>
            <input type="tel" name="telefone" />
        </div>

        <div>
            <label for="lbl-senha">Senha:</label>
            <input type="password" name="senha" />
        </div>

        <button type="submit">Cadastrar</button>
    </form>
</section>