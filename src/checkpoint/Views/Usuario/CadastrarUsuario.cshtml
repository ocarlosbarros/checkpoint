@model pontoDigital.Models.Usuario
@using pontoDigital.Enums;
<section class="full-screen">
    <form method="POST" action='@Url.Action("CadastrarUsuario", "Usuario")'>
        <div>
            <label for="lbl-nome">Nome:</label>
            <input type="text" name="nome"  minlength="1" maxlength="80" required/>
        </div>

        <div>
            <label for="lbl-genero">Genero:</label><br/>
            <input type="radio" name="genero" value="masculino" checked="checked" required>Masculino<br/>
            <input type="radio" name="genero" value="feminino">Feminino<br/>
            <input type="radio" name="genero" value="outro">Outro<br/>
        </div>

        <div>
            <label for="lbl-dataNascimento">Data de nascimento:</label>
            <input type="date" name="dataNascimento" pattern="[0-9]{2}\/[0-9]{2}\/[0-9]{4}$" required/>
        </div>

        <div>
            <label for="lbl-endereco">Endere√ßo:</label>
            <input type="text" name="endereco" required/>
        </div>

        <div>
            <label for="lbl-telefone">Telefone:</label>
            <input type="tel" name="telefone" required/>
        </div>
        <div class="form-group col-sm-2">
            <select name="permissao" asp-for="Permissao" asp-items="Html.GetEnumSelectList<EnumPermissao>()" class="form-control"></select>
        </div>

        <div>
            <label for="lbl-email">E-mail:</label>
            <input type="mail" name="eMail" pattern="[a-z0-9._%+-]+@@[a-z0-9.-]+\.[a-z]{2,4}$" required/>
        </div>

        <div>
            <label for="lbl-senha">Senha:</label>
            <input type="password" name="senha" minlength="6"  required/>
        </div>

        <button type="submit">Cadastrar</button>
    </form>
</section>